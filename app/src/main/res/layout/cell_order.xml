<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Deliver.Card.Primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_4x"
    app:contentPadding="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_4x"
        android:orientation="horizontal">

        <com.example.deliverandroid.view.clock.ClockView

            android:id="@+id/clockView"
            android:layout_width="@dimen/margin_6x"
            android:layout_height="@dimen/margin_6x" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewTime"
            style="@style/Widget.Deliver.Text.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_2x" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewTitle"
        style="@style/Widget.Deliver.Text.Title.Bold.Middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_x" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_4x"
        android:orientation="horizontal">

        <com.example.deliverandroid.view.story.StoryImageView
            android:id="@+id/customStoryView"
            android:layout_width="84dp"
            android:layout_height="48dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewProducts"
            style="@style/Widget.Deliver.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_2x" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0_5x"
        android:layout_marginTop="@dimen/margin_4x"
        android:background="?colorOnSurface" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_4x"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewLocation"
            style="@style/Widget.Deliver.Card.Primary"
            android:layout_width="@dimen/margin_10x"
            android:layout_height="@dimen/margin_10x"
            app:cardBackgroundColor="@color/green"
            app:contentPadding="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/margin_5x"
                android:layout_height="@dimen/margin_5x"
                android:layout_gravity="center"
                android:src="@drawable/ic_location" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewLocationTitle"
            style="@style/Widget.Deliver.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_2x"
            android:text="@string/deliver_location" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewLocation"
        style="@style/Widget.Deliver.Text.Title.Bold.Little"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_x"
        android:maxLines="2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_4x"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewCommentary"
            style="@style/Widget.Deliver.Card.Primary"
            android:layout_width="@dimen/margin_10x"
            android:layout_height="@dimen/margin_10x"
            app:cardBackgroundColor="@color/green"
            app:contentPadding="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/margin_5x"
                android:layout_height="@dimen/margin_5x"
                android:layout_gravity="center"
                android:src="@drawable/ic_commentary" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewCommentaryTitle"
            style="@style/Widget.Deliver.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_2x" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewCommentary"
        style="@style/Widget.Deliver.Text.Title.Bold.Little"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_x" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewPaymentMethod"
        style="@style/Widget.Deliver.Card.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4x"
        android:layout_marginTop="@dimen/margin_4x"
        app:cardBackgroundColor="?colorOnSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewPaymentTitle"
                    style="@style/Widget.Deliver.Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivered" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewPaymentSubtitle"
                    style="@style/Widget.Deliver.Text.Title.Bold.Little"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_0_5x" />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewBalance"
                style="@style/Widget.Deliver.Card.Primary"
                android:layout_width="@dimen/margin_10x"
                android:layout_height="@dimen/margin_10x"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_4x"
                app:cardBackgroundColor="@color/blue"
                app:contentPadding="0dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/margin_5x"
                    android:layout_height="@dimen/margin_5x"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_balance" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>


