<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Deliver.Card.Primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?colorOnSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_header_time" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewTitle"
            style="@style/Widget.Deliver.Text.Title.Bold.Middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Deliver.Card.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4x">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewPrice"
                    style="@style/Widget.Deliver.Text.Title.Bold.Little"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/margin_10x"
                    android:layout_height="@dimen/margin_10x"
                    app:cardCornerRadius="@dimen/margin_5x"
                    app:cardElevation="0dp"
                    android:layout_marginStart="@dimen/margin_4x"
                    app:cardBackgroundColor="@color/blue"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/margin_5x"
                        android:layout_height="@dimen/margin_5x"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_balance"/>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>