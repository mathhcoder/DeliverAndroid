<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorOnSurface"
    android:layout_marginHorizontal="@dimen/margin_4x"
    android:orientation="horizontal">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/margin_14x"
        android:layout_height="@dimen/margin_14x"
        app:cardCornerRadius="@dimen/margin_7x"
        android:layout_gravity="center"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/margin_14x"
            android:layout_height="@dimen/margin_14x" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_x"
        android:layout_marginEnd="@dimen/margin_4x"
        android:layout_weight="1">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Deliver.Text.Title.Bold.Middle"
            android:id="@+id/textViewTitle"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSubtitle"
            style="@style/Widget.Deliver.Text.Body"
            android:layout_marginTop="@dimen/margin_0_5x"
            />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/margin_10x"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/margin_5x"
        android:layout_height="@dimen/margin_10x"
        android:layout_gravity="center"
        android:id="@+id/cardViewRight"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/margin_5x"
            android:layout_height="@dimen/margin_5x"
            android:layout_gravity="center"
            android:id="@+id/imageViewRight"
            />


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>