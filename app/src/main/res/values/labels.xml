<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Deliver.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/thin</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="Widget.Muazzin.Text.Semi" parent="Widget.Deliver.Text">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>


    <style name="Widget.Deliver.Text.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>


    <style name="Widget.Deliver.Text.Title.Bold">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Widget.Deliver.Text.Title.Bold.Little">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Deliver.Text.Title.Bold.Middle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.Deliver.Text.Title.Bold.Ultra">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Widget.Deliver.Text.Body" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Deliver.Text.Body.Bold" >
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Widget.Deliver.Text.Caption" >
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Deliver.Text.Caption.Bold">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>


    <style name="Widget.Deliver.Text.Button">
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Widget.Deliver.Text.Arabic" >
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/usmani</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>


</resources>